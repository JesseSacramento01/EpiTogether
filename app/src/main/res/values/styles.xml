<?xml version="1.0" encoding="utf-8"?>
<resources>
        <!-- Base application theme -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/blue</item>
            <item name="colorPrimaryDark">@color/black</item>
            <item name="colorAccent">@color/white</item>
        </style>

    <!-- Date background and text -->

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
    <item name="colorControlActivated">@color/blue</item>
    <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!-- Day of the Week color -->
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/green</item>
    </style>


    <style name="CalenderViewDateCustomText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@drawable/date_cells</item>
    </style>




    <!-- Custom DatePickerDialog style -->
    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background color for the dialog -->
        <item name="android:background">#FFFFFF</item>

        <!-- Customize the header color (date picker top bar) -->
        <item name="colorPrimary">#008FEE</item>

        <!-- Customize the text color in the DatePicker -->
        <item name="android:textColorPrimary">#020202</item>

        <!-- Customize the buttons (Cancel/OK) text color -->
        <item name="android:buttonBarButtonStyle">@style/CustomButtonStyle</item>
    </style>

    <!-- Custom Button Style for DatePickerDialog -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#2186F3</item> <!-- Customize button text color -->
    </style>





</resources>