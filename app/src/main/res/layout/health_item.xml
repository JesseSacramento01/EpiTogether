<!-- res/layout/medication_item.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:padding="10dp"
    android:background="@drawable/popup_background">

    <ImageView
        android:id="@+id/medicamentoIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/baseline_medical_services_24" />

    <TextView
        android:id="@+id/medication_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Medicamento: Nome"
        android:textSize="14sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/medication_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data: 12/04/2024"
        android:textSize="12sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/medication_dose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dose: 12mg"
        android:textSize="12sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/medication_regimen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regime: Diariamente"
        android:textSize="12sp"
        android:textColor="@android:color/black" />

</LinearLayout>
